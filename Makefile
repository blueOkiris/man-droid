# Changeable Project Settings
OBJNAME :=  mandroid
CPPC :=     g++
CPPFLAGS := -O2 -Wall -Werror
LD :=       gcc
LDFLAGS :=  
SRCFLDR :=  src
INCFLDR :=  include
OBJFLDR :=  obj

# Helper Targets
.PHONY : all
all : $(OBJNAME)

.PHONY : clean
clean :
	rm -rf $(OBJFLDR)
	rm -rf $(OBJNAME)

# Autogenerated stuff
SRC :=      $(wildcard $(SRCFLDR)/*.cpp)
OBJS :=     $(subst c,o,$(subst $(SRCFLDR),$(OBJFLDR),$(SRC)))

$(OBJFLDR)/%.o : $(SRCFLDR)/%.cpp
	$(CPPC) $(CPPFLAGS) -I$(INCFLDR) -o $@ -c $<

# Main build targets
$(OBJNAME) : $(OBJS) $(INCFLDR)
	$(LD) $(LDFLAGS) $(OBJS) -o $(OBJNAME)
